---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import ProjectCard from '../components/ProjectCard.astro'
import Label from '../components/Label.astro'
import SkillLayout from '../components/SkillLayout.astro'
import PostPreview from '@/components/blog/PostPreview.astro'

import { Image } from 'astro:assets'
import astro from '../assets/about-umesh.png'

import { getAllPosts, sortMDByDate } from '@/utils'

const languages = ['lorem', 'ipsum']
const frontend = ['lorem', 'ipsum', 'lorem', 'ipsum', 'lorem', 'ipsum', 'lorem']
const backend = ['lorem', 'ipsum', 'lorem', 'ipsum']
const others = ['lorem', 'ipsum', 'lorem', 'ipsum', 'lorem']

const MAX_POSTS = 10
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
---

<PageLayout meta={{ title: 'Home' }}>
	<div class='flex w-full flex-col gap-y-10'>
		<section class='flex flex-col items-center gap-y-7'>
			<Image
				src={astro}
				alt='profile photo'
				class='h-28 w-auto rounded-full bg-[#FFBE98] p-2'
				loading='eager'
			/>

			<div class='flex flex-col items-center gap-y-4'>
				<h1 class='text-4xl font-black'>hi, I'm Umesh</h1>
				<h2 class='text-center text-xl'>
					Software Engineer turned Entrepreneur. I love building things and helping people.<br /> Very
					active on Xwitter.
				</h2>
				<a
					href='https://calendly.com/umesh-ganapathy/30min'
					class='flex flex-row items-center gap-x-3 rounded-3xl border border-input px-4 py-2 text-sm shadow-sm transition-all hover:shadow-md'
				>
					<span class='relative flex items-center justify-center'>
						<span
							class='absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75'
						></span>
						<span class='relative inline-flex h-2 w-2 rounded-full bg-green-400'></span>
					</span>

					<p class='font-medium'>Schedule a call</p>
				</a>
				<div class='flex flex-wrap justify-center gap-x-7 gap-y-3'>
					<Label
						title='Connect on Linkedin'
						as='a'
						href='https://www.linkedin.com/in/umeshganapathy/'
						target='_blank'
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 16 16'
							slot='icon'
							class='h-5 w-5 text-foreground/75'
							><path
								fill='currentColor'
								d='M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248c-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586c.173-.431.568-.878 1.232-.878c.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252c-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z'
							></path></svg
						>
					</Label>
					<Label
						title='Connect on Twitter'
						as='a'
						href='https://www.x.com/umeshganapathy/'
						target='_blank'
					>
						<svg
							width='1em'
							slot='icon'
							height='1em'
							viewBox='0 0 300 300'
							version='1.1'
							xmlns='http://www.w3.org/2000/svg'
						>
							<path
								fill='currentColor'
								d='M178.57 127.15 290.27 0h-26.46l-97.03 110.38L89.34 0H0l117.13 166.93L0 300.25h26.46l102.4-116.59 81.8 116.59h89.34M36.01 19.54H76.66l187.13 262.13h-40.66'
							></path>
						</svg>
					</Label>
				</div>
			</div>
		</section>

		<Section title='About'>
			<p class='text-muted-foreground'>
				At the end of 2019, I quit my full time job as a senior technical product manager to
				dedicate more time and energy to my family.
			</p>
			<p class='text-muted-foreground'>
				Starting in 2020, I explored my passion for building and solving challenges through side
				hustles and helping businesses build and scale through consulting.
			</p>
			<p class='text-muted-foreground'>
				In 2021, I moved to the US to support my wife's research and became family of 4.
			</p>
			<p class='text-muted-foreground'>
				In the past, I pursued a bachelors in computer science and engineering, have been involved
				in building couple of ed tech startups and tech communities in South India.
			</p>
		</Section>
		{
			allPostsByDate.length > 0 && (
				<Section title='Posts'>
					<ul class='flex flex-col gap-y-2'>
						{allPostsByDate.map((p) => (
							<li class='flex flex-col gap-x-2 sm:flex-row'>
								<PostPreview post={p} />
							</li>
						))}
					</ul>
				</Section>
			)
		}

		<Section title='Work Experience'>
			<Card
				heading='CollabWrite'
				subheading='Founder and CEO'
				date='Jan 2020 - Present'
				imagePath='/src/assets/about-umesh.png'
				altText='Umesh Ganapathy, Founder and CEO, CollabWrite'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Collabwrite is a dynamic growth partner agency specializing in propelling tech startups
						and small to medium-sized businesses towards success.

						<li>
							As a dedicated ally in the competitive technology landscape, Collabwrite offers
							tailored strategies designed to solve customer and growth challenges through
							data-driven approaches.
						</li>
					</li>
				</ul>
			</Card>
			<Card
				heading='XSEED Education'
				subheading='Senior Technical Product Manager'
				date='Dec 2018 - July 2019'
				imagePath='/src/assets/xseed.png'
				altText='Umesh Ganapathy, Senior Technical Product Manager, XSEED Education'
				imageClass='h-8 w-auto md:-left-20'
				href='https://www.xseededucation.com'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Collabwrite is a dynamic growth partner agency specializing in propelling tech startups
						and small to medium-sized businesses towards success.

						<li>
							As a dedicated ally in the competitive technology landscape, Collabwrite offers
							tailored strategies designed to solve customer and growth challenges through
							data-driven approaches.
						</li>
					</li>
				</ul>
			</Card>
			<Card
				heading='ReportBee'
				subheading='Product Chief, Technology, Founding Team Member'
				date='Jan 2012 - Dec 2018'
				imagePath='/src/assets/reportbee.jpg'
				altText='Umesh, Product Chief - Technology, Founding Team Member, ReportBee'
				imageClass='h-10 w-auto md:-left-20'
				href='https://www.reportbee.com'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Collabwrite is a dynamic growth partner agency specializing in propelling tech startups
						and small to medium-sized businesses towards success.

						<li>
							As a dedicated ally in the competitive technology landscape, Collabwrite offers
							tailored strategies designed to solve customer and growth challenges through
							data-driven approaches.
						</li>
					</li>
				</ul>
			</Card>
			<Card
				heading='HeyMath!'
				subheading='Software Engineer -> Senior Software Engineer'
				date='Jul 2007 - Dec 2011'
				imagePath='/src/assets/heymath.png'
				altText='Umesh, Software Engineer, HeyMath'
				imageClass='h-12 w-auto md:-left-20'
				href='https://www.heymath.com'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Collabwrite is a dynamic growth partner agency specializing in propelling tech startups
						and small to medium-sized businesses towards success.

						<li>
							As a dedicated ally in the competitive technology landscape, Collabwrite offers
							tailored strategies designed to solve customer and growth challenges through
							data-driven approaches.
						</li>
					</li>
				</ul>
			</Card>
		</Section>

		<Section title='Education'>
			<Card
				heading='Bachelors in Computer Science and Engineering'
				subheading='Calicut University, Kerala'
				date='June 2004 - April 2007'
				imagePath='/src/assets/cu.png'
				altText='Umesh, Bachelors in Computer Science and Engineering, Calicut University'
				imageClass='h-12 w-auto md:-left-16'
				href='https://uoc.ac.in/'
				>Learned about fundamentals of computers, algorithms, data structures and software
				development</Card
			>
			<Card
				heading='Diploma in Electronics'
				subheading='Department of Technical Education, Kerala'
				date='June 2001 - April 2004'
				imagePath='/src/assets/mti.jpeg'
				altText='Umesh, Diploma in Electronics, MTI, Department of Technical Education, Kerala'
				imageClass='h-12 w-auto md:-left-16'
				href='http://mtithrissur.ac.in/'
				>Learned about fundamentals of electronic components, how they work and how to design
				electronic instruments</Card
			>
			<Card
				heading='Technical Highschool'
				subheading='Junior Technical Highschool, Kerala'
				date='June 1998 - April 2001'
				imagePath='/src/assets/dte.jpeg'
				altText='Umesh, Junior Technical Highschool, Kerala'
				imageClass='h-12 w-auto md:-left-20'
				href='https://www.dtekerala.gov.in/institutiondetail/3/'
				>Learned some life skills like carpentery, mechanical, electrical, welding etc</Card
			>
		</Section>

		<Section title='Projects'>
			<div class='flex flex-col gap-y-3 sm:flex-row sm:gap-x-3 sm:gap-y-0'>
				<ProjectCard
					href='https://www.google.com'
					heading='Consectetur'
					subheading='Lorem ipsum dolor sit amet consectetur adipisicing elit.'
					imagePath='/src/assets/coming-soon.png'
					altText='Example'
					class='w-full sm:w-1/2'
				/>
				<ProjectCard
					as='div'
					heading='Coming soon...'
					subheading=''
					imagePath='/src/assets/coming-soon.png'
					altText='Lorem, ipsum dolor sit'
					class='w-full sm:w-1/2'
				/>
			</div>
		</Section>

		<Section title='Volunteer'>
			<Card
				as='a'
				heading='Founder & Manager, HTML5 User Group Chennai'
				subheading='Lorem ipsum dolor sit amet consectetur adipisicing elit. Aperiam dicta magni consequuntur corrupti.'
				date='Mar 2024 - Mar 2024'
				imagePath='/src/assets/html5.png'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-11 w-auto md:-left-32'
				href='https://www.google.com'
			/>
			<Card
				as='a'
				heading='Campus Connect Chair, Society for Rich Internet Applications and Rich User Interface'
				subheading='Lorem ipsum dolor sit amet consectetur adipisicing elit. Aperiam dicta.'
				date='Mar 2029 - Mar 2032'
				imagePath='/src/assets/riarui.jpeg'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-14 w-auto md:-left-16'
				href='https://www.google.com'
			/>
		</Section>

		<Section title='Skills'>
			<SkillLayout title='Languages' skills={languages} />
			<SkillLayout title='Frontend' skills={frontend} />
			<SkillLayout title='Backend' skills={backend} />
			<SkillLayout title='Others' skills={others} />
		</Section>
	</div>
	<a
		href='https://calendly.com/umesh-ganapathy/30min'
		class='mt-16 flex flex-row items-center gap-x-3 rounded-3xl border border-input px-4 py-2 text-sm shadow-sm transition-all hover:shadow-md'
	>
		<span class='relative flex items-center justify-center'>
			<span
				class='absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75'
			></span>
			<span class='relative inline-flex h-2 w-2 rounded-full bg-green-400'></span>
